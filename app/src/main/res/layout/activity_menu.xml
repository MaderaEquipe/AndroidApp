<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="86dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/projets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonprojet" />


        <Button
            android:id="@+id/devis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttondevis" />


        <Button
            android:id="@+id/clients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/buttonclient"
            android:gravity="right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/transparent_divider"
        android:rotation="180" />


    <LinearLayout
        android:id="@+id/LayoutProjet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/voirProjet"
            android:layout_width="255dp"
            android:layout_height="61dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/buttonvoirprojet" />

        <Button
            android:id="@+id/newProjet"
            android:layout_width="335dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@drawable/buttonadd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/voirClient"
            android:layout_width="254dp"
            android:layout_height="61dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/voirclient"
            android:visibility="visible" />

        <Button
            android:id="@+id/newClient"
            android:layout_width="336dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@drawable/nouveauclient" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutDevis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/voirDevis"
            android:layout_width="254dp"
            android:layout_height="61dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/voirdevis" />

    </LinearLayout>
</LinearLayout>



